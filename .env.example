# OpenAI API Key for Whisper and GPT services
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration
POSTGRES_DB=youtube_transcription
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection URL
DATABASE_URL=postgresql://postgres:your_secure_password_here@postgres:5432/youtube_transcription

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Application Configuration
APP_ENV=development
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# File Storage
AUDIO_FILES_DIR=/app/audio_files

# Video Duration Limit (in seconds)
# Set to 0 for no limit (unlimited duration)
# Example: 3600 = 60 minutes, 7200 = 2 hours
MAX_VIDEO_DURATION_SECONDS=0

# Rate Limiting
RATE_LIMIT_PER_HOUR=10
